<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/match_parents"
    android:weightSum="100">

    <!--layout_height is 0dp since we are using the weightSum attribute-->
    <ImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:scaleType="centerCrop"
        android:src="@drawable/crosspolo2"/>

    <TextView
        android:id="@+id/image_angle"
        style="@style/profile_activity_text_views"
        android:textStyle="bold"
        android:text="@string/profile_activity_text_view_angle"/>

    <TextView
        android:id="@+id/image_description"
        style="@style/profile_activity_text_views"
        android:text="@string/profile_activity_text_view_description"/>

</LinearLayout>